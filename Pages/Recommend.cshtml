@page

@model WinInventory.Pages.RecommendModel

@{

    ViewData["Title"] = "Recommend Mac";

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
 
<div class="container py-4">
<div class="d-flex align-items-center justify-content-between">
<h1 class="mb-0">Recommend a Mac</h1>
<div class="d-flex gap-2">
<a class="btn btn-outline-secondary" href="/">Back to Overview</a>
</div>
</div>
<p class="text-muted">We build a capability profile from your Windows device, then rank close Mac matches.</p>
 
  <div class="row g-4">
<div class="col-lg-5">
<div class="card shadow-sm">
<div class="card-body">
<h5 class="card-title">Your Windows Device</h5>
<div class="row"><div class="col-5 text-muted">Name</div><div class="col-7 fw-semibold">@Model.WinInfo.ComputerName</div></div>
<div class="row"><div class="col-5 text-muted">CPU</div><div class="col-7 fw-semibold">@Model.WinInfo.Processor</div></div>
<div class="row"><div class="col-5 text-muted">RAM</div><div class="col-7 fw-semibold">@Model.WinInfo.TotalMemoryGB</div></div>
<div class="row"><div class="col-5 text-muted">OS</div><div class="col-7 fw-semibold">@Model.WinInfo.OSName @Model.WinInfo.OSVersion</div></div>
<div class="row"><div class="col-5 text-muted">Largest Disk</div><div class="col-7 fw-semibold">

            @{

              var maxDisk = Model.WinInfo.Disks.OrderByDescending(d =>

              {

                  var n = d.SizeGB?.Split(' ');

                  return (n != null && n.Length > 0 && double.TryParse(n[0], out var g)) ? g : 0;

              }).FirstOrDefault();

            }

            @(maxDisk?.Name ?? "-") — @(maxDisk?.SizeGB ?? "-")
</div></div>
</div>
</div>
</div>
 
    <div class="col-lg-7">
<div class="card shadow-sm">
<div class="card-body">
<h5 class="card-title">Top Mac Matches</h5>
 
          @if (Model.Matches.Count == 0)

          {
<div class="alert alert-warning mb-0">No catalog entries found. Make sure <code>wwwroot/data/macbooks.csv</code> exists.</div>

          }

          else

          {

            foreach (var m in Model.Matches)

            {
<div class="border rounded p-3 mb-3">
<div class="d-flex justify-content-between align-items-start">
<div>
<div class="h5 mb-1">@m.Mac.Model</div>
<div class="text-muted">

                      @m.Mac.Chip · @m.Mac.RamGb GB · @m.Mac.StorageGb GB · @m.Mac.DisplayInches.ToString("0.0")" · @m.Mac.Wifi
</div>
<div class="small">
<span class="me-3">@m.CpuNote</span>
<span class="me-3">@m.RamNote</span>
<span class="me-3">@m.StorageNote</span>
</div>
</div>
<div class="text-end">
<div class="badge bg-primary-subtle text-primary border">Similarity: <b>@m.Similarity</b></div>
<div class="mt-2 fw-semibold">@m.PriceNote</div>
</div>
</div>
<div class="small text-muted mt-2">Ports: @m.Mac.Ports</div>
</div>

            }

          }
</div>
</div>
</div>
</div>
</div>

 